---
interface Props {
	links: string[];
	body: string;
	href: string;
}

const { links, title, body } = Astro.props;
---

<li class="link-card">
  <div class="link-body">
		<h2>
			<a class="title" href={links.docUrl} title={title} target="_blank">{title}</a>
			<span>&rarr;</span>
			<a href={links.docUrl} title={title} target="_blank">「文档说明」</a>
			<a href={links.gitUrl} title={title} target="_blank">「在线查看代码」</a>
		</h2>
		<p>
			{body}
		</p>
    <p>
       <a href={links.gitUrlRaw} title="安装脚本 - RAW" target="_blank">「安装脚本 - RAW」</a>
       <a href={links.cdnUrl} title="安装脚本 - CDN" target="_blank">「安装脚本 - CDN」</a>
    </p>
  </div>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > div {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
  a {
    text-decoration: none;
  }
  h2 a.title {
    color: inherit;
  }
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
  .link-card:is(:hover, :focus-within) a {
    text-decoration: underline;
  }
  .link-card:is(:hover, :focus-within) a:hover {
    text-decoration: none;
  }
</style>
